<div class="container mt-5 mb-5">
    <div class="d-flex justify-content-center row">
        <div class="col-md-10">
            <% offers.forEach(offer=> { %>
            <div class="row p-2 bg-white border rounded mt-2">
                <div class="col-md-3 mt-1"><img class="img-fluid img-responsive rounded product-image" src="<% offer.img %> "></div>
                <div class="col-md-6 mt-1">
                    <h5><% offer.seller.name %>  </h5>
                    <div class="d-flex flex-row">
                        <div class="ratings mr-2"><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i></div><span>310</span>
                    </div>
                    <div class="mt-1 mb-1 spec-1"><span>contact</span></div>

                    <p class="text-justify text-truncate para mb-0">
                        num :<% offer.seller.num %> <br><br></p>
                </div>
                <div class="align-items-center align-content-center col-md-3 border-left mt-1">
                    <div class="d-flex flex-row align-items-center">
                        <h4 class="ml-" ><% offer.price %> </h4>
                    </div>
                    
                    <div class="d-flex flex-column mt-1">
                       
                    <h5><% offer.willaya %> </h5>
                    <span><% offer.adresse %> </span>

                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
</div> 